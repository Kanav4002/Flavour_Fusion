<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard - FlavorFusion</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="dashboard-container">
        <div class="dashboard-header">
            <h1>Welcome Back, <span id="userName">Chef</span>!</h1>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Recipes</h3>
                <div class="stat-value" id="totalRecipes">0</div>
            </div>
            <div class="stat-card">
                <h3>Favorite Recipes</h3>
                <div class="stat-value" id="favoriteRecipes">0</div>
            </div>
            <div class="stat-card">
                <h3>Average Rating</h3>
                <div class="stat-value" id="averageRating">0.0</div>
            </div>
            <div class="stat-card">
                <h3>Recipe Views</h3>
                <div class="stat-value" id="recipeViews">0</div>
            </div>
        </div>

        <div class="dashboard-content">
            <div class="main-content">
                <div class="recipe-of-day">
                    <div class="section-header">
                        <h2>Recipe of the Day</h2>
                    </div>
                    <div class="featured-recipe" id="recipeOfDay">
                        <!-- Recipe of the day content will be loaded dynamically -->
                    </div>
                </div>

                <div class="my-favorites">
                    <div class="section-header">
                        <h2>My Favorite Recipes</h2>
                    </div>
                    <div class="favorites-grid" id="favoritesGrid">
                        <!-- Favorite recipes will be loaded dynamically -->
                    </div>
                </div>
            </div>

            <div class="sidebar">
                <div class="quick-actions">
                    <div class="section-header">
                        <h2>Quick Actions</h2>
                    </div>
                    <div class="action-buttons">
                        <button class="action-btn" onclick="window.location.href='/add-recipe'">
                            <i class="fas fa-plus"></i>
                            Add New Recipe
                        </button>
                        <button class="action-btn" onclick="window.location.href='/meal-planner'">
                            <i class="fas fa-calendar-alt"></i>
                            Meal Planner
                        </button>
                        <button class="action-btn" onclick="window.location.href='/profile'">
                            <i class="fas fa-user-edit"></i>
                            Edit Profile
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/dashboard.js"></script>
</body>
</html> 