<!DOCTYPE html>
<html lang="en">
<head>
    <title>Meal Planner - FlavorFusion</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/css/meal-planner.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <main class="meal-planner-container">
        <div class="planner-header">
            <h1>Meal Planner</h1>
            <div class="week-navigation">
                <button id="prevWeek"><i class="fas fa-chevron-left"></i></button>
                <div class="date-picker">
                    <span id="weekDisplay"></span>
                    <button id="calendarToggle"><i class="fas fa-calendar-alt"></i></button>
                    
                    <!-- Calendar Popup -->
                    <div id="calendarPopup" class="calendar-popup">
                        <div class="calendar-header">
                            <button id="prevMonthBtn"><i class="fas fa-chevron-left"></i></button>
                            <div>
                                <span id="monthYearDisplay"></span>
                            </div>
                            <button id="nextMonthBtn"><i class="fas fa-chevron-right"></i></button>
                        </div>
                        <div class="weekdays">
                            <div>Su</div>
                            <div>Mo</div>
                            <div>Tu</div>
                            <div>We</div>
                            <div>Th</div>
                            <div>Fr</div>
                            <div>Sa</div>
                        </div>
                        <div class="calendar-days" id="calendarDays">
                            <!-- Days will be populated by JS -->
                        </div>
                    </div>
                </div>
                <button id="nextWeek"><i class="fas fa-chevron-right"></i></button>
            </div>
        </div>

        <div class="meal-grid">
            <!-- Days will be populated here -->
        </div>

        <div class="recipe-selector" id="recipeSelector">
            <div class="selector-header">
                <h3>Select Recipe</h3>
                <input type="text" id="recipeSearch" placeholder="Search recipes...">
            </div>
            <div class="recipe-list" id="recipeList">
                <!-- Recipes will be populated here -->
            </div>
        </div>

        <div class="shopping-list">
            <h3>Shopping List for the Week</h3>
            <div id="shoppingList">
                <!-- Shopping list will be populated here -->
            </div>
            <button id="downloadList" class="download-btn">
                <i class="fas fa-download"></i> Download Shopping List
            </button>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/meal-planner.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html> 